<!--pages/planDetail/planDetail.wxml-->
<form catchsubmit="formSubmit">
<view>方案名字</view>
<input name="pname" value="{{plan.pname}}"/>
<view>----</view>
<picker mode="time" name="startTime" value='{{plan.startTime}}' start="00:00" end="23:59" bindchange="bindSTimeChange">
  <view class="picker">  
    开始时间:{{plan.startTime}}</view>
</picker>
<view>----</view>
<picker mode="time" name="endTime" value='{{plan.endTime}}' start="00:00" end="23:59" bindchange="bindETimeChange">
  <view class="picker">  
    结束时间:{{plan.endTime}}</view>
</picker>
<view>----</view>
<view>开关情况</view>
<view>灯1</view>
<switch checked="{{l1 == 'ON'}}" bindchange="switch1Change"/>
<view>灯2</view>
<switch checked="{{l2 == 'ON'}}" bindchange="switch2Change"/>
<view>灯3</view>
<switch checked="{{l3 == 'ON'}}" bindchange="switch3Change"/>
<view>灯4</view>
<switch checked="{{l4 == 'ON'}}" bindchange="switch4Change"/>
<view>灯5</view>
<switch checked="{{l5 == 'ON'}}" bindchange="switch5Change"/>
<view>灯6</view>
<switch checked="{{l6 == 'ON'}}" bindchange="switch6Change"/>
<view>风扇</view>
<radio-group name="fan" bindchange="selectFan">
1<radio checked="{{fan == 'F1'}}" value="F1"></radio>
2<radio checked="{{fan == 'F2'}}" value="F2"></radio>
3<radio checked="{{fan == 'F3'}}" value="F3"></radio>
4<radio checked="{{fan == 'F4'}}" value="F4"></radio>
5<radio checked="{{fan == 'F5'}}" value="F5"></radio>
6<radio checked="{{fan == 'F6'}}" value="F6"></radio>
7<radio checked="{{fan == 'F7'}}" value="F7"></radio>
8<radio checked="{{fan == 'F8'}}" value="F8"></radio>
9<radio checked="{{fan == 'F9'}}" value="F9"></radio>
</radio-group>
<button form-type="submit">修改方案</button>
</form>