<view class="card">
<form catchsubmit="formSubmit">
<view>方案名</view>
<input name='pname'/>
<picker put mode="time" name="startTime" value='{{startTime}}' start="00:00" end="23:59" bindchange="bindSTimeChange">
  <view class="picker">  
    开始时间:{{startTime}}</view>
</picker>
<view>----</view>
<picker put mode="time" name="endTime" value='{{endTime}}' start="00:00" end="23:59" bindchange="bindETimeChange">
  <view class="picker">  
    结束时间:{{endTime}}</view>
</picker>
<view>----</view>
<view>开关情况</view>
<view>灯1</view>
<switch checked="{{l1 == 'ON'}}" bindchange="switch1Change"/>
<view>灯2</view>
<switch checked="{{l2 == 'ON'}}" bindchange="switch2Change"/>
<view>灯3</view>
<switch checked="{{l3 == 'ON'}}" bindchange="switch3Change"/>
<view>灯4</view>
<switch checked="{{l4 == 'ON'}}" bindchange="switch4Change"/>
<view>灯5</view>
<switch checked="{{l5 == 'ON'}}" bindchange="switch5Change"/>
<view>灯6</view>
<switch checked="{{l6 == 'ON'}}" bindchange="switch6Change"/>
<view>风扇</view>
<radio-group name="fan" bindchange="selectFan">
1<radio value="F1"></radio>
2<radio value="F2"></radio>
3<radio value="F3"></radio>
4<radio value="F4"></radio>
5<radio value="F5"></radio>
6<radio value="F6"></radio>
7<radio value="F7"></radio>
8<radio value="F8"></radio>
9<radio value="F9"></radio>
</radio-group>

<button form-type="submit">创建方案</button>
</form>
</view>