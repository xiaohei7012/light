/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.header{
  position: fixed;
  top:0;
  left:0;
  padding:10rpx 30rpx 15rpx 30rpx;
  width:691rpx;
  /* background: -webkit-gradient(linear,0 0,0 100% from(#3f3f3f),to(#2f2f2f)); */
  border-bottom: solid 1px #000;
  /* box-shadow: 0 2px 4px #111; */
}

.nav{
  display: inline-block;
  width:588rpx;
  height:60rpx;
  vertical-align: top;

  margin-right:30rpx;
  background-color: #373737;
  /* border:solid 1px #000; */
  /* border-radius: 5px; */

  /* box-shadow: 0 -1px 0px #777; */
}

.nav .nav-wrapper{
  width:590rpx;
  height:100%;
  display: flex;
  position: relative;
}

.nav .tab{
  color:#111;
  flex-grow:1;
  font-size: 28rpx;
  border-right: solid 1px #000;
  width:50%;
  background: -webkit-gradient(linear,0 0,0 100%, from(#636363),to(#4f4f4f));
  text-align: center;
  line-height: 60rpx;
}

.nav .tab:first{
  border-left:none;
}

.nav .tab.current{
  color:#fcfc;
  font-weight:bold;
  background: -webkit-gradient(linear,0 0,0 100%,from(#252525),to(#2f2f2f));
  box-shadow: inset 0 0 4px #111;text-shadow: 0 2px 3px #000;
}

.addbutton{
  display: inline-block;
  position: relative;
  right:0;
  width:60rpx;
  height:60rpx;
  vertical-align: top;
  background-image: url('https://636c-cloud1-1gmp4i3o3c5625e5-1307331440.tcb.qcloud.la/images/add.png?sign=0fb3f1d9e54a22cb5e8d209625b439c3&t=1662103642');
