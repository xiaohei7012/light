.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.addbutton{
  display: inline-block;
  position: relative;
  right:0;
  width:60rpx;
  height:60rpx;
  vertical-align: top;
  background-image: url('https://636c-cloud1-1gmp4i3o3c5625e5-1307331440.tcb.qcloud.la/images/add.png?sign=0fb3f1d9e54a22cb5e8d209625b439c3&t=1662103642');
  background-size: 60rpx 60rpx;
  /* background-color: #373737; */
  /* border:solid 1px #000; */
  /* border-radius: 5px; */
  /* box-shadow: 0 -1px 0px #777; */ 
}



.scroll{
  display: flex;
  flex-wrap: wrap;
  height: calc( 100% - 150rpx );
}

.card{
  margin:25rpx;
  text-align: center;
  border: solid 2px #000;
  box-shadow: 4px 4px 4px #111;
  background: -webkit-gradient(linear,0 0,0 100% from(#3f3f3f),to(#2f2f2f));
  background-color: #373737;
  border-bottom: solid 1px #000;
  box-shadow: 0 2px 4px #111;
}

.head{
  width:50%;
  margin-left: auto;
  margin-right: auto;
}

.line{
  margin:20rpx auto 20rpx auto;
}

.line-item{
  display: inline-block;
  padding:10rpx 15rpx 10rpx 15rpx;
  border:solid 5rpx grey;
  border-radius:10rpx;
}

.line-item text{
  margin:0 15rpx 0 15rpx;
}

.edit-item{
  display: inline;
  background-color: grey;
  border-radius:10rpx;
}

.input{
  border-bottom: solid 1rpx white;
}